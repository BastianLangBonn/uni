import RPi.GPIO as GPIO
import time

GPIO.setmode(GPIO.BOARD)

GPIO.setup(11, GPIO.IN)

currentActivation = 0.0


while 1:
    if GPIO.input(11) == GPIO.HIGH:
        currentActivation += 5.0
        if currentActivation > 100.0:
            currentActivation = 100.0
            time.sleep(0.2)
            
    time.sleep(0.01)
